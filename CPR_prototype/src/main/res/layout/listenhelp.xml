<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    >

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If the person is not responding you need to check if the breathing is normal. Correct the persons head posture first and then listen if it has normal, troubled or no breathing at all."
        android:id="@+id/listenhelptext"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

</LinearLayout>